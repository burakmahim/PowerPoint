@{
    Layout = null; // İstersen ortak layout'u da kullanabilirsin
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>PDF Önizleme</title>
    <style>
        body, html {
            margin: 0;
            height: 100%;
        }

        #pdf-container {
            width: 100%;
            height: 100vh;
        }
    </style>
</head>
<body>
    <embed id="pdf-container"
           src="@Url.Action("ViewPdf", "Presentation")"
           type="application/pdf"
           width="100%"
           height="100%">
</body>
</html>
