@{
    ViewBag.Title = "XML Sunum Önizleme";
}

<h2>XML ile Sunum Oluştur ve Görüntüle</h2>

<form method="post" action="/Presentation/PreviewPdfFromXml">
    <div class="mb-3">
        <label for="xmlInput">XML Girdisi:</label>
        <textarea name="xmlInput" id="xmlInput" rows="25" style="width:100%">@ViewBag.XmlText</textarea>
    </div>
    <button type="submit" class="btn btn-success">Görüntüle (PDF Önizleme)</button>
</form>

@if (ViewBag.ShowPreview != null && ViewBag.ShowPreview == true)
{
    <hr />
    <h4>Sunum Önizlemesi</h4>
    <iframe src="/Presentation/GetPreviewPdf" width="100%" height="600px" style="border:1px solid #ccc;"></iframe>
}
