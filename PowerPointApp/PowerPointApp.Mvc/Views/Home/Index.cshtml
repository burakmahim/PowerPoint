@{
    ViewData["Title"] = "PowerPoint Oluşturucu";
}

<h1>XML ile PowerPoint Oluştur</h1>

<form asp-action="GeneratePowerPoint" method="post">
    <div class="form-group">
        <label>XML İçeriği:</label>
        <textarea name="xmlContent" class="form-control" rows="15" placeholder="Aşağıya XML yapıştırın...">
<slide>
        <title>Örnek Başlık</title>
        <body>Bu bir deneme içeriğidir</body>
        <img url="https://example.com/logo.png" x="100" y="200" w="300" h="150" />
</slide>
        </textarea>
    </div>
    <button type="submit" class="btn btn-primary">Oluştur</button>
</form>